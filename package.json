{
  "name": "@rheactor/mariadb-alt",
  "description": "An alternative MariaDB Node driver (written in TypeScript).",
  "version": "0.1.0",
  "license": "Apache License 2.0",
  "scripts": {
    "dev": "tsc --watch",
    "build": "rimraf dist/ && tsc -project tsconfig.build.json && tsc-alias && swc ./dist -d ./dist",
    "ts:unused": "ts-unused-exports ./tsconfig.json --showLineNumber",
    "prettier": "prettier --check ./src ./tests",
    "prettier:fix": "prettier --write ./src ./tests",
    "eslint": "eslint ./src ./tests",
    "eslint:fix": "eslint --fix ./src ./tests",
    "tsc": "tsc --noEmit",
    "code:analysis": "pnpm prettier && pnpm eslint && pnpm tsc",
    "test": "jest --detect-open-handles",
    "test:ci": "jest --detect-open-handles --ci",
    "test:build": "pnpm build && jest --config ./jest.config.build.ts --detect-open-handles",
    "test:build:ci": "pnpm build && jest --config ./jest.config.build.ts --detect-open-handles --ci",
    "test:watch": "jest --watch --expand --detect-open-handles --only-changed",
    "test:coverage": "jest --coverage --detect-open-handles"
  },
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.22.9",
    "@babel/preset-typescript": "^7.22.5",
    "@rheactor/eslint-config-rheactor": "github:rheactor/eslint-config-rheactor",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.74",
    "@types/jest": "^29.5.3",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "dotenv": "^16.3.1",
    "eslint": "^8.46.0",
    "jest": "^29.6.2",
    "knip": "^2.18.0",
    "prettier": "^3.0.1",
    "rimraf": "^5.0.1",
    "ts-node": "^10.9.1",
    "ts-unused-exports": "^9.0.5",
    "tsc-alias": "^1.8.7",
    "typescript": "^5.1.6"
  }
}
