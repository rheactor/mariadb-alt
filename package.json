{
  "name": "@rheactor/mariadb_alt",
  "description": "An alternative mariadb driver (Typescript-based).",
  "version": "0.1.0",
  "license": "Apache License 2.0",
  "scripts": {
    "dev": "tsc --watch",
    "build": "rimraf dist/ && tsc -project tsconfig.build.json && tsc-alias && swc ./dist -d ./dist",
    "ts:unused": "ts-unused-exports ./tsconfig.json --showLineNumber",
    "prettier": "prettier --check ./src ./tests",
    "prettier:fix": "prettier --write ./src ./tests",
    "eslint": "eslint ./src ./tests",
    "eslint:fix": "eslint --fix ./src ./tests",
    "test": "jest --detect-open-handles",
    "test:ci": "jest --detect-open-handles --ci",
    "test:build": "npm run build && jest --config ./jest.config.build.ts --detect-open-handles",
    "test:build:ci": "npm run build && jest --config ./jest.config.build.ts --detect-open-handles --ci",
    "test:watch": "jest --watch --expand --detect-open-handles --only-changed",
    "test:coverage": "jest --coverage --detect-open-handles"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.21.4",
    "@babel/preset-typescript": "^7.21.4",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.44",
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "dotenv": "^16.0.3",
    "eslint": "^8.37.0",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.5.0",
    "prettier": "^2.8.7",
    "rimraf": "^4.4.1",
    "ts-node": "^10.9.1",
    "ts-unused-exports": "^9.0.4",
    "tsc-alias": "^1.8.5",
    "typescript": "^5.0.3"
  }
}
